#include <stdio.h>

// Function to convert INR to foreign currencies
float inr_to_currency(float inr, int choice) {
    switch (choice) {
        case 1: return inr * 0.012; // INR to USD
        case 2: return inr * 0.011; // INR to EUR
        case 3: return inr * 0.0095; // INR to GBP
        case 4: return inr * 1.2; // INR to JPY
        case 5: return inr * 0.017; // INR to AUD
        case 6: return inr * 0.016; // INR to CAD
        case 7: return inr * 0.017; // INR to SGD
        case 8: return inr * 0.010; // INR to CHF
        case 9: return inr * 0.045; // INR to AED
        case 10: return inr * 0.045; // INR to SAR
        case 11: return inr * 0.11; // INR to CNY
        case 12: return inr * 0.095; // INR to HKD
        case 13: return inr * 0.055; // INR to MYR
        case 14: return inr * 0.018; // INR to NZD
        case 15: return inr * 0.20; // INR to ZAR
        case 16: return inr * 3.8; // INR to PKR
        case 17: return inr * 1.25; // INR to BDT
        case 18: return inr * 3.8; // INR to LKR
        case 19: return inr * 1.7; // INR to NPR
        case 20: return inr * 0.43; // INR to THB
        case 21: return inr * 17; // INR to KRW
        case 22: return inr * 210; // INR to IDR
        default: return 0;
    }
}

// Function to convert foreign currencies to INR
float currency_to_inr(float amount, int choice) {
    switch (choice) {
        case 1: return amount / 0.012; // USD to INR
        case 2: return amount / 0.011; // EUR to INR
        case 3: return amount / 0.0095; // GBP to INR
        case 4: return amount / 1.2; // JPY to INR
        case 5: return amount / 0.017; // AUD to INR
        case 6: return amount / 0.016; // CAD to INR
        case 7: return amount / 0.017; // SGD to INR
        case 8: return amount / 0.010; // CHF to INR
        case 9: return amount / 0.045; // AED to INR
        case 10: return amount / 0.045; // SAR to INR
        case 11: return amount / 0.11; // CNY to INR
        case 12: return amount / 0.095; // HKD to INR
        case 13: return amount / 0.055; // MYR to INR
        case 14: return amount / 0.018; // NZD to INR
        case 15: return amount / 0.20; // ZAR to INR
        case 16: return amount / 3.8; // PKR to INR
        case 17: return amount / 1.25; // BDT to INR
        case 18: return amount / 3.8; // LKR to INR
        case 19: return amount / 1.7; // NPR to INR
        case 20: return amount / 0.43; // THB to INR
        case 21: return amount / 17; // KRW to INR
        case 22: return amount / 210; // IDR to INR
        default: return 0;
    }
}

int main() {
    int choice, direction;
    float amount, result;

    printf("Currency Conversion Program (INR and Foreign Currencies)\n");
    printf("1. INR to Foreign Currency\n");
    printf("2. Foreign Currency to INR\n");
    printf("Choose the conversion direction (1 or 2): ");
    scanf("%d", &direction);

    if (direction == 1) {
        // INR to foreign currency
        printf("Enter amount in INR: ");
        scanf("%f", &amount);

        printf("Choose the currency to convert to:\n");
        printf("1. USD\n2. EUR\n3. GBP\n4. JPY\n5. AUD\n6. CAD\n7. SGD\n8. CHF\n");
        printf("9. AED\n10. SAR\n11. CNY\n12. HKD\n13. MYR\n14. NZD\n");
        printf("15. ZAR\n16. PKR\n17. BDT\n18. LKR\n19. NPR\n20. THB\n");
        printf("21. KRW\n22. IDR\nChoose currency (1-22): ");
        scanf("%d", &choice);

        result = inr_to_currency(amount, choice);
        printf("Converted amount: %.2f\n", result);
    }
    else if (direction == 2) {
        // Foreign currency to INR
        printf("Enter amount in foreign currency: ");
        scanf("%f", &amount);

        printf("Choose the currency to convert from:\n");
        printf("1. USD\n2. EUR\n3. GBP\n4. JPY\n5. AUD\n6. CAD\n7. SGD\n8. CHF\n");
        printf("9. AED\n10. SAR\n11. CNY\n12. HKD\n13. MYR\n14. NZD\n");
        printf("15. ZAR\n16. PKR\n17. BDT\n18. LKR\n19. NPR\n20. THB\n");
        printf("21. KRW\n22. IDR\nChoose currency (1-22): ");
        scanf("%d", &choice);

        result = currency_to_inr(amount, choice);
        printf("Converted amount in INR: %.2f\n", result);
    }
    else {
        printf("Invalid choice! Please restart the program.\n");
    }

    return 0;
}
